<Window x:Class="answer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox Name="combo_name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10, 10, 0, 0" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBox.Items>
                    <ComboBoxItem Name="a" Content="tes1" IsSelected="True"/>
                    <ComboBoxItem Name="b" Content="tes2"/>
                    <ComboBoxItem Name="c" Content="tes3"/>
                </ComboBox.Items>
            </ComboBox>
            <Button Click="ButtonClicked" Content="Button" VerticalAlignment="Top" Margin="10, 10, 0, 0"/>
        </StackPanel>
    </Grid>
</Window>
